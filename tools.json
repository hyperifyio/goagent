{
  "tools": [
    {
      "name": "get_time",
      "description": "Get current time for an IANA timezone",
      "schema": {
        "type": "object",
        "properties": {
          "timezone": {
            "type": "string",
            "description": "IANA timezone, e.g. Europe/Helsinki"
          }
        },
        "required": ["timezone"],
        "additionalProperties": false
      },
      "command": ["./bin/timecli"],
      "timeoutSec": 5
    }
  ]
}

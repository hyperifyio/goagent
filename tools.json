{
  "tools": [
    {
      "name": "get_time",
      "description": "Get current time for an IANA timezone",
      "schema": {
        "type": "object",
        "properties": {
          "tz": {
            "type": "string",
            "description": "IANA timezone, e.g. Europe/Helsinki"
          }
        },
        "required": ["tz"],
        "additionalProperties": false
      },
      "command": ["./tools/get_time"],
      "timeoutSec": 5
    }
  ]
}
